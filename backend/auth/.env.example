# Agent-Cofounder Authentication Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=your_secure_secret_key_here_64_characters_minimum

# REQUIRED: Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_API_KEY=your-supabase-anon-public-key-here

# REQUIRED: Environment (development/production)
ENVIRONMENT=development

# Security Settings
SESSION_LIFETIME_DAYS=1
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Logging
LOG_LEVEL=INFO
LOG_FILE=auth.log

# Production only (set these for production deployment)
# FORCE_HTTPS=true
# SESSION_COOKIE_SECURE=true